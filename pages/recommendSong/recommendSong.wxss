/* pages/recommendSong/recommendSong.wxss */
.recommendContainer .header{
    position:relative;
    width:100%;
    height:300rpx;
}
.recommendContainer .header image{
    width:100%;
    height:100%;
}
.recommendContainer .header .date{
    position:absolute;
    left:50%;
    top:50%;
    margin-left:-150rpx;
    margin-top:-26rpx;
    width:300rpx;
    height:100rpx;
    /* border:1px solid red; */
    text-align:center;
    line-height:100rpx;
    color:#fff;
    font-size:50rpx;
}
.recommendContainer .listContainer{
    position:relative;
    top:-20rpx;
    padding:0 20rpx;
    border-radius:30rpx;
    background:#fff;
}

.listContainer .listHeader{
    height:80rpx;
    line-height:80rpx;
}
.listContainer .listHeader .more{
    float:right;
}
.listContainer .listScroll{
    height:calc(100vh - 380rpx);
}
.listContainer .listScroll .listItem{
    display:flex;
    height:80rpx;
    margin-bottom:20rpx;
}
.listItem:last-child{
    margin-bottom:0rpx;
}
.listItem image{
    width:80rpx;
    height:80rpx;
    border-radius:10rpx;
}
.listItem .musicInfo{
    display:flex;
    flex-direction:column;
    margin-left:20rpx;
}
.listItem .musicInfo text{
    height:40rpx;
    line-height:40rpx;
    font-size:26rpx;
    max-width:500rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.listItem>text:last-of-type{
    position:absolute;
    right:0;
    width:80rpx;
    height:80rpx;
    text-align:right;
    line-height:80rpx;
}